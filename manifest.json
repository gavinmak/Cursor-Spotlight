{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,

  "name": " Cursor Spotlight",
  "description": "This extension shows where the cursor is on the current page.",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery-3.1.1.min.js", "background.js"]
    }],

  "permissions": [
    "storage"
  ],
  
  "icons": { "128": "icon.png"},

  "options_ui": {
    "page": "options.html",
    "chrome_style": true,
    "open_in_tab": true
  }
}
