{
  "manifest_version": 2,

  "name": " Cursor Spotlight",
  "description": "Never lose your cursor again. Highlight your mouse pointer.",
  "version": "1.3.1",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/jquery-3.1.1.min.js", "js/background.js"]
    }],

  "permissions": [
    "storage"
  ],

  "icons": { "128": "icon.png"},

  "browser_action" : { "default_popup": "popup.html" }
}
